{%- if section.settings.show_announcement != blank -%}
  {% if section.settings.image_desk != blank or section.settings.image_mob != blank %}
    <div
      class="announcement-bar"
      {% if section.settings['option-announce'] == 'show-message' %}
        style="background-color:{{ section.settings.annouce-bgc }}; padding:{{ section.settings.sec-padding }}px;"
      {% endif %}
    >
      <a href="{{ section.settings.link }}" title="Announcement bar">
        {% if section.settings['option-announce'] == 'show-message' %}
          
           
            <marquee class="announcement-marquee__wrapper">
              <p class="text-center" style="color:{{ section.settings.annouce-textc }};font-size:{{ section.settings.text-fonts }}px "
              >
                {{ section.settings['annouce-text'] }}
              </p>
            </marquee>
         
           
        {% else %}
          <img
            src="{{ section.settings.image_desk | img_url: 'master' }}"
            alt="announcement bar"
            height="52"
            width="1550"
            class="desk-announcement lazyload"
            loading="lazy"
          >
          <img
            src="{{ section.settings.image_mob | img_url: 'master' }}"
            alt="announcement bar"
            height="52"
            width="720"
            class="mob-announcement lazyload"
            loading="lazy"
          >
        {% endif %}
      </a>
    </div>
  {% endif %}
{% endif %}




{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": false
    },
     {
        "type": "header",
        "content": "Announcebar options"
      },
      {
      "type": "radio",
      "options": [
        {
          "value": "show-message",
          "label": "show announcement message"
        },
        {
          "value": "show-banner",
          "label": "show announcement banner"
        }
      ],
      "id": "option-announce",
      "label": "Choose option",
      "default": "show-banner",
      "info": "Select option to display message or banner as an announcement bar."
    },
      {
        "type": "header",
        "content": "Announcebar Text message options option"
      },
    {
      "type": "richtext",
      "id": "annouce-text",
      "label": "Announcement Text Message"
    },
     {
      "type": "color",
      "id": "annouce-bgc",
      "label": "Announcement background color"
    },
    {
      "type": "color",
      "id": "annouce-textc",
      "label": "Announcement text color"
    },
     {
      "type": "range",
      "id": "text-fonts",
       "label": "Message font size",
      "min": 8,
      "max": 40,
      "step": 1,
      "default": 18,
      "unit": "px"
    },     
    {
      "type": "range",
      "id": "sec-padding",
       "label": "section padding",
      "min": 0,
      "max": 40,
      "step": 1,
      "default": 5,
      "unit": "px"
    },
     {
        "type": "header",
        "content": "Announcebar Banner option"
      },
    {
      "type": "image_picker",
      "id": "image_desk",
      "label": "Announcement Image For Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mob",
      "label": "Announcement Image For Mobile"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Announcement link"
    }
  ]
}
{% endschema %}
