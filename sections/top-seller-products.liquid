<section class="top-seller-products__wrapper">
  <div class="container-fluid">
    <div class="top-seller-carousel__wrapper">
      <h2>
        <span>{{ section.settings.title | escape }}</span>
      </h2>
      <div class="top-seller-carousel">
        {%- for product in collections[section.settings.collection].products -%}
        <div>          
            <div class="product__item">
              <a href="{{ product.url | within: collection }}">
                <div class="product-item__image">
                  <img
                    src="{{ product.featured_image | img_url: 'master' }}"
                    height="468"
                    width="312"
                    alt="{{ product.title }}"
                    class="lazyload"
                    loading="lazy" />
                </div>
                <h3 class="product__title">{{ product.title }}</h3>
                <span class="product__price">{{ product.price }}</span>
              </a>
            </div>          
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
</section>



{% schema %}
  {
    "name": "Top seller",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "t:sections.top-seller-products.settings.title.info",
        "label": "t:sections.top-seller-products.settings.title.label"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "t:sections.top-seller-products.settings.collection.label"
      }
    ],
    "presets": [
      {
        "name": "Top seller"
      }
    ]
  }
{% endschema %}